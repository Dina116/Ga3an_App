<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_ga3an"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:src="@drawable/ga3an"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ga3an"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="70dp"
        android:text="I am Ga3an"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@id/iv_ga3an"
        app:layout_constraintTop_toBottomOf="@id/iv_ga3an" />

    <Button
        android:textColor="@color/white"
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="30dp"
       android:backgroundTint="#956565"
        android:text="Dinner is ready"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/tv_ga3an" />

</androidx.constraintlayout.widget.ConstraintLayout>